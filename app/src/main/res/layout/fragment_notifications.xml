<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.hesap.NotificationsFragment">


    <LinearLayout
        android:id="@+id/secenekler_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/hesap_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Yazılım Blog"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:fontFamily="@font/baslik" />

        <!-- Giriş Butonu -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/giris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/block_background"
            android:text="Giriş"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Kaydol Butonu -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/block_background"
            android:text="Kaydol"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Ayırıcı çizgi -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white" />

        <!-- Mail Butonu -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block_background"
            android:text="Mail ile giriş"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/hesap_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/block_background"
            android:padding="10dp">

            <!-- Sol kısım: ImageView + TextView -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hesap"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hesap_isim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:text="Hesap ismi" />

                    <TextView
                        android:id="@+id/hesap_kaydolmatarihi"
                        android:layout_width="wrap_content"
                        android:textColor="#888888"
                        android:layout_height="wrap_content"
                        android:text="kaydolma tarihi"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/hesap_toplamblog"
                        android:layout_width="wrap_content"
                        android:textColor="#888888"
                        android:layout_height="wrap_content"
                        android:text="toplam blog" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cikis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⛔"
                            android:padding="5dp"
                            android:textSize="20dp">
                        </TextView>

                        <TextView
                            android:id="@+id/favs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="❤️"
                            android:padding="5dp"
                            android:textSize="20dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Boşluk ekleyerek sağa itilmesini sağla -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Sağdaki buton -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/ayarlar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️"
                    android:layout_gravity="center"
                    android:textSize="30dp">

                </TextView>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yayınlanmış Bloglarım"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white">
        </TextView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>