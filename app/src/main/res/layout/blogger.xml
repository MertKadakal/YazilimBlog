<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hesap.NotificationsFragment">

    <LinearLayout
        android:id="@+id/hesap_layout"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        android:padding="10dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/block_background"
            android:padding="10dp">

            <!-- Sol kısım: ImageView + TextView -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Profil resmi -->
                    <ImageView
                        android:id="@+id/pp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/hesap"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="10dp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/hesap_isim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                         />



                    <TextView
                        android:id="@+id/hesap_toplamblog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        />

                    <TextView
                        android:id="@+id/hesap_kaydolmatarihi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/sikayet"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/alert"
                android:layout_gravity="center">
            </TextView>
            <TextView
                android:id="@+id/bilgi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/info"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yayınlanmış Bloglar"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white">
        </TextView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>




    </LinearLayout>

    <TextView
        android:id="@+id/blog_yok_img_blogger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Henüz yayınlanmış blog yok"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>