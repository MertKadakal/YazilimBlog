<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Üst TextView -->
    <TextView
        android:id="@+id/ust_yazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yazılım Blog"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/metin_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/ust_yazi"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/blog_baslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Başlık (max 50 karakter)"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="top"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                android:background="@drawable/block_background"
                android:layout_marginBottom="10dp"
                android:maxLength="50"
                />

            <EditText
                android:id="@+id/blog_metin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="580"
                android:hint="Metni buraya girin...\n\nEn az 300 karakter girilmeli\nLütfen saygı kurallarına dikkat edin"
                android:padding="16dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/block_background"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Alt butonlar -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ekle_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ekle"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:background="@drawable/block_background"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/etiket_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etiketler"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:background="@drawable/block_background"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
