<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Blog Metni Kaydırılabilir -->
    <ScrollView
        android:id="@+id/scroll_blog_metin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            android:orientation="vertical">

            <!-- Başlık ve seçenekler -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blog_baslik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Başlık"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/blog_secenekler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ξ   "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Detay -->
            <TextView
                android:id="@+id/blog_detay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Detay"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Etiketler -->
            <TextView
                android:id="@+id/blog_etiketler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Etiketler"
                android:textColor="#888888"
                android:textSize="18sp"
                android:textStyle="italic" />

            <!-- Blog metni -->
            <TextView
                android:id="@+id/blog_metin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buraya uzun blog yazısı gelecek..."
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        app:behavior_peekHeight="55dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Küçük tutma çubuğu -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:radius="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Yorumları görmek için yukarı kaydırın"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Yorum Listesi -->
        <ListView
            android:id="@+id/yorumlar_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="10dp"/>

        <!-- Yorum yok mesajı -->
        <TextView
            android:id="@+id/yorum_yok_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="Yorum yok"
            android:textColor="@android:color/darker_gray"
            android:visibility="visible"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
